{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": ["name", "version"],
	"properties": {
		"name": { "type": "string", "minLength": 1 },
		"version": { "type": "string", "minLength": 1 },
		"description": { "type": "string" },
		"runtime": {
			"type": "object",
			"properties": {
				"python": { "type": "string" }
			},
			"additionalProperties": true
		},
		"dependencies": {
			"type": "array",
			"items": { "type": "string", "minLength": 1 },
			"uniqueItems": true
		},
		"default_tool": {
			"type": "string"
		},
		"events": {
			"type": "object",
			"properties": {
				"subscribe": {
					"type": "array",
					"items": { "type": "string", "minLength": 1 },
					"uniqueItems": true
				},
				"publish": {
					"type": "array",
					"items": { "type": "string", "minLength": 1 },
					"uniqueItems": true
				}
			},
			"additionalProperties": false
		},
		"exports": {
			"type": "object",
			"properties": {
				"tools": {
					"type": "array",
					"items": { "type": "string", "minLength": 1 },
					"uniqueItems": true
				}
			},
			"additionalProperties": true
		},
		"tools": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["name", "input_schema"],
				"properties": {
					"name": { "type": "string", "minLength": 1 },
					"description": { "type": "string" },
					"entry": { "type": "string" },
					"input_schema": { "type": "object" },
					"output_schema": { "type": "object" }
				},
				"additionalProperties": true
			},
			"uniqueItems": true
		},
		"data_projections": {
			"description": "Optional data projection rules that map (scope, slot) pairs to storage backends. Skills may define defaults here; scenarios can override them.",
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"scope": { "type": "string" },
					"slot": { "type": "string" },
					"targets": {
						"type": "array",
						"items": {
							"type": "object",
							"additionalProperties": true,
							"properties": {
								"backend": {
									"type": "string",
									"enum": ["yjs", "kv", "sql"]
								},
								"webspace_id": { "type": "string" },
								"path": { "type": "string" },
								"table": { "type": "string" },
								"column": { "type": "string" }
							},
							"required": ["backend"]
						}
					}
				},
				"required": ["scope", "slot"]
			}
		},
		"nlu": {
			"type": "object",
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}
